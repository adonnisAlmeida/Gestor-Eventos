<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
        <record id="res_config_settings_view_form" model="ir.ui.view">
            <field name="name">res.config.settings.view.form.inherit.importer</field>
            <field name="model">res.config.settings</field>
            <field name="priority" eval="70"/>
            <field name="inherit_id" ref="base.res_config_settings_view_form"/>
            <field name="arch" type="xml">
                <xpath expr="//div[hasclass('settings')]" position="inside">
                    <div class="app_settings_block" string="Importar" data-key="odoo_v11_importer">
                        <h2>Importar</h2>
                        <div class="row mt16 o_settings_container">
                            <div class="col-xs-12 col-md-6 o_setting_box">
                                <div class="o_setting_right_pane">                                    
                                    <div class="text-muted">
                                        Importar desde otra base de datos
                                    </div>
                                    <div class="content-group">
                                        <div class="mt16">
                                            <button name="%(odoo_v11_importer.action_manual_importer_wizard)d" string="Importar" type="action" class="oe_link" icon="fa-arrow-right"/>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </xpath>
            </field>
        </record>

    
    </data>
</odoo>
