<?xml version="1.0" encoding="utf-8"?>
<odoo>    

    <template id="portal_breadcrumbs_papers" name="Portal layout: papers menu entry" inherit_id="portal.portal_breadcrumbs" priority="40">
        <xpath expr="//ol[hasclass('o_portal_submenu')]" position="inside">
            <li t-if="page_name == 'paper' or paper" class="col-lg-2" t-attf-class="breadcrumb-item #{'active ' if not paper else ''}">
                <a t-if="paper" t-attf-href="/my/papers?{{ keep_query() }}">Papers</a>
                <t t-else="">Papers</t>
            </li>
            <li t-if="paper" class="breadcrumb-item active text-truncate col-8 col-lg-10">
                <t t-esc="paper.name"/>
            </li>            
        </xpath>
    </template>

    <template id="portal_my_home_papers" name="Show Papers" customize_show="True" inherit_id="portal.portal_my_home" priority="16">
        <xpath expr="//div[hasclass('o_portal_docs')]" position="inside">
            <t t-call="portal.portal_docs_entry">
                <t t-set="title">Papers</t>
                <t t-set="url" t-value="'/my/papers'"/>
                <t t-set="placeholder_count" t-value="'paper_count'"/>
            </t>
        </xpath>
    </template>


    <template id="portal_my_papers" name="My Papers">        
        <t t-call="portal.portal_layout">
            <t t-set="breadcrumbs_searchbar" t-value="True"/>
            <t t-call="portal.portal_searchbar">
                <t t-set="title">Papers</t>
            </t>
           
                <t t-if="not grouped_papers">
                    <div class="container">
                        <div class="alert alert-warning mt64 h3" role="alert">
                            <span class="fa fa-warning" /> There are currently no papers for your account.
                        </div>
                </div>
                </t>

                <t t-if="grouped_papers">
                    <t t-call="portal.portal_table">
                        <t t-foreach="grouped_papers" t-as="papers">
                            <thead>
                                <tr t-attf-class="{{'thead-light' if not groupby == 'none' else ''}}">
                                    <th class="text-left">Ref</th>
                                    <th t-if="groupby == 'none'">Name</th>
                                    <th t-if="groupby == 'event'">
                                        <em class="font-weight-normal text-muted">Papers for event:</em>
                                        <span t-field="papers[0].sudo().event_id.name"/></th>
                                    <th t-if="groupby == 'stage'">
                                        <em class="font-weight-normal text-muted">Papers in stage:</em>
                                        <span class="text-truncate" t-field="papers[0].sudo().stage_id.name"/></th>
                                    <th t-if="groupby != 'event'" class="text-center">Event</th>
                                    <th t-if="groupby != 'stage'" class="text-center">Stage</th>
                                </tr>
                            </thead>
                            <tbody>
                                <t t-foreach="papers" t-as="prop">
                                    <tr>
                                        <td class="text-left">
                                            #<span t-esc="prop.id"/>
                                        </td>
                                        <td>
                                            <a t-attf-href="/my/paper/#{prop.id}?{{ keep_query() }}"><span t-field="prop.name"/></a>
                                        </td>
                                        <td t-if="groupby != 'event'" class="text-center">
                                            <span class="badge badge-pill badge-info" title="Current event of the paper" t-esc="prop.event_id.name" />
                                        </td>
                                        <td t-if="groupby != 'stage'" class="text-center">
                                            <span class="badge badge-pill badge-info" title="Current stage of the paper" t-esc="prop.stage_id.name" />
                                        </td>
                                    </tr>
                                </t>
                            </tbody>
                        </t>
                    </t>
                </t>
            
        </t>
    </template>

    <template id="portal_my_paper_content" name="My Paper Content">
        <div class="card pb-5" style="border:0!important;">
            <div class="pb-2 pt-3 card-header bg-white">
                <div class="row no-gutters">
                    <div class="col-12">
                        <h5 class="d-flex mb-1 mb-md-0 row">
                            <div class="col-6">
                                <h2 class="mb-0"><b>Paper</b> <small class="text-muted d-none d-md-inline"> (#<span t-field="paper.id"/>)</small></h2>
                            </div>                            
                            <div class="col-6 text-right">
                                <span class="badge badge-pill badge-info" t-field="paper.stage_id.name" />                            
                                <span t-if="paper.is_done and not paper.stage_id.is_done " class="badge badge-pill badge-primary" title="Expired">Expired</span>
                            </div>
                        </h5>
                    </div>
                </div>
            </div>
            <div class="card-body">
                <div class="">
                    <t t-set="fixed" t-value="paper.is_done or not paper.stage_id.can_edit or paper.event_id.paper_final_deadline_overdue" />
                    <div class="alert alert-danger" role="alert" t-if="error and error.get('global','')" t-esc="error and error.get('global','')" />
                    <div class="alert alert-info" role="alert" t-if="info and info.get('global','')" t-esc="info and info.get('global','')" />
                    <div class="alert alert-success" role="alert" t-if="success and success.get('global','')" t-esc="success and success.get('global','')" />
                    <!-- modal to create authors-->
                    <div class="modal fade" id="modal_add_author" role="dialog">
                        <div class="modal-dialog" role="document">
                            <div class="modal-content">
                                <div class="modal-header align-items-center">
                                    <h4 class="modal-title">Add Author</h4>
                                    <button type="button" class="close" data-dismiss="modal" aria-label="Close"><span>&amp;times;</span></button>
                                </div>
                                <div class="modal-body">
                                    <form id="add_author_form" method="post" action="#">
                                        <div class="form-group row">
                                            <label class="col-sm-12 col-form-label" for="author_name">Full Name:</label>
                                            <div class="col-sm-12">
                                                <input type="text" class="form-control form-control-lg" name="author_name" required="True" placeholder="Insert author's full name" />
                                                
                                            </div>
                                        </div>
                                        <div class="form-group row">
                                            <label class="col-sm-12 col-form-label" for="author_email">Email:</label>
                                            <div class="col-sm-12">
                                                <input type="email" class="form-control form-control-lg" name="author_email" required="True" placeholder="Insert author's email address" />
                                                
                                            </div>
                                        </div>
                                        <div class="form-group row">
                                            <label class="col-sm-12 col-form-label label-optional" for="author_institution">Institution:</label>
                                            <div class="col-sm-12">
                                                <input type="text" class="form-control form-control-lg" name="author_institution" placeholder="Insert author's institution name" />
                                                
                                            </div>
                                        </div>
                                        <div class="form-group row">
                                            <label class="col-sm-12 col-form-label" for="author_country_id">Country:</label>
                                            <div class="col-sm-12">
                                                <select name="author_country_id" id="author_country_id" class="form-control form-control-lg" required="required" placeholder="Select">
                                                    <t t-foreach='countries' t-as="country">
                                                        <option t-esc='country.name' t-att-value='country.id' t-att-data-url="country.image_url" t-att-selected="country.id == paper.partner_id.country_id.id"/>
                                                    </t>
                                                </select>
                                            </div>
                                        </div>
                                    </form>
                                </div>
                                <div class="modal-footer">
                                    <button type="button" class="btn btn-secondary js_add_author_modal_cancel">Cancel</button>
                                    <button type="button" class="btn btn-primary js_add_author_modal_save">Save</button>
                                </div>
                            </div>
                        </div>
                    </div>
                    
                    <!-- modal to edit authors-->
                    <div class="modal fade" id="modal_edit_author" role="dialog">
                        <div class="modal-dialog" role="document">
                            <div class="modal-content">
                                <div class="modal-header align-items-center">
                                    <h4 class="modal-title">Edit Author</h4>
                                    <button type="button" class="close" data-dismiss="modal" aria-label="Close"><span>&amp;times;</span></button>
                                </div>
                                <div class="modal-body">
                                    <form id="edit_author_form" method="post" action="#">
                                        <input type="hidden" name="author_id"/>
                                        <div class="form-group row">
                                            <label class="col-sm-12 col-form-label" for="author_name">Full Name:</label>
                                            <div class="col-sm-12">
                                                <input type="text" class="form-control form-control-lg" name="author_name" required="True" placeholder="Insert author's full name" />
                                                <div class="invalid-feedback" name="author_name_error_feedback"></div>
                                            </div>
                                        </div>
                                        <div class="form-group row">
                                            <label class="col-sm-12 col-form-label" for="author_email">Email:</label>
                                            <div class="col-sm-12">
                                                <input type="email" class="form-control form-control-lg" name="author_email" required="True" placeholder="Insert author's email address" />
                                                <div class="invalid-feedback" name="author_email_error_feedback"></div>
                                            </div>
                                        </div>
                                        <div class="form-group row">
                                            <label class="col-sm-12 col-form-label label-optional" for="author_institution">Institution:</label>
                                            <div class="col-sm-12">
                                                <input type="text" class="form-control form-control-lg" name="author_institution" placeholder="Insert author's institution name" />
                                                
                                            </div>
                                        </div>
                                        <div class="form-group row">
                                            <label class="col-sm-12 col-form-label" for="author_country_id">Country:</label>
                                            <div class="col-sm-12">
                                                <select name="author_country_id" id="author_country_id" class="form-control form-control-lg" required="required" placeholder="Select">
                                                    <t t-foreach='countries' t-as="country">
                                                        <option t-esc='country.name' t-att-data-url="country.image_url" t-att-value='country.id'/>
                                                    </t>
                                                </select>
                                            </div>
                                        </div>
                                    </form>
                                </div>
                                <div class="modal-footer">
                                    <button type="button" class="btn btn-secondary js_edit_author_modal_cancel">Cancel</button>
                                    <button type="button" class="btn btn-primary js_edit_author_modal_save">Save</button>
                                </div>
                            </div>
                        </div>
                    </div>

                    <form method="POST" enctype="multipart/form-data" class="js_website_submit_form" id="paper_form"> 
                    <div class="mb32">
                        <h4 id="event" data-anchor="true"><strong>Event</strong></h4>
                        <h4><a t-attf-href="/event/#{paper.event_id.id}"> 
                            <t t-esc="paper.event_id.name"/> 
                            <t t-if="paper.event_id.short_name" t-esc="paper.event_id.short_name"/> 
                            <t t-if="paper.event_id.subname" t-esc="paper.event_id.subname"/>
                        </a></h4>
                    </div>
                    <div class="row mb32">
                        <div t-attf-class="col-12 col-lg-12 mb-6 mb-md-0">                                    
                            <div class="d-flex mb-1">
                                <h4 id="title" data-anchor="true"><strong>Title<small class="text-sm text-muted" title="English"> [EN] </small></strong></h4>
                            </div>                                    
                            <h4 t-if="fixed" t-field="paper.with_context(lang='en_US').name" />
                            <input t-else="" type="text" t-attf-class="form-control form-control-lg #{error.get('name') and 'is-invalid' or ''}"  name="name" required="True" placeholder="Insert paper title here (in English)" t-att-value="post and post.get('name', '') or paper.with_context(lang='en_US').name" />
                            <div t-if="error and error.get('name')" class="small text-danger mt-1" t-esc="error.get('name')" />  
                        </div>
                    </div>
                    <div class="row mb32">
                        <div t-attf-class="col-12 col-lg-12 mb-6 mb-md-0">                                    
                            <div class="d-flex mb-1">
                                <h4 id="title_es" data-anchor="true"><strong>Title<small class="text-sm text-muted" title="Spanish"> [ES]</small></strong></h4>
                            </div>                                    
                            <h4 t-if="fixed" t-field="paper.with_context(lang='es_ES').name" />
                            <input t-else="" type="text" t-attf-class="form-control form-control-lg #{error.get('name_es') and 'is-invalid' or ''}"  name="name_es" required="True" placeholder="Insert paper title here (in Spanish)" t-att-value="post and post.get('name_es', '') or paper.with_context(lang='es_ES').name" />
                            <div t-if="error and error.get('name_es')" class="small text-danger mt-1" t-esc="error.get('name_es')" /> 
                        </div>
                    </div>
                    <div class="form-group row mb32" t-if="paper.language_id">
                        <h4 class="col-12" id="language" data-anchor="true"><strong>Main Language</strong></h4>
                        <div class="col-12">
                            <t t-set="post_lang_id" t-value="post and int(post.get('language_id', '0')) or int(paper.language_id.id)" />
                            
                            <h4 t-if="fixed" t-field="paper.language_id.name" />
                            <select t-else="" t-attf-class="form-control form-control-lg #{error.get('language_id') and 'is-invalid' or ''}" name="language_id">
                                <t t-foreach='paper.event_id.allowed_language_ids' t-as="lang2">
                                    <option t-esc='lang2.name' t-att-value='lang2.id' t-att-selected="lang2.id == post_lang_id" />
                                </t>
                            </select>                                                            
                            <div t-if="error and error.get('language_id')" class="small text-danger mt-1" t-esc="error.get('language_id')" />
                        </div>
                    </div>
                    <div class="row mb32">
                        <div class="col-12 mb-1">
                            <h4 id="_authors" data-anchor="true"><strong>Authors</strong></h4>                            
                            <span class="text-info fa fa-info" /> <span class="text-muted">You can drag up and down in order to sort authoring relevance</span>
                            <input type="hidden" name="authors" id="authors" t-att-value='post and post.get("authors", authors ) or authors' />
                            <div>
                                <ol t-if="fixed">
                                    <li t-foreach='paper.author_ids' t-as="author">                                            
                                        <div>
                                            <t t-if="author.partner_id == paper.partner_id">
                                                <b><span itemprop="name" t-field="author.partner_id.name" /></b>
                                            </t>
                                            <t t-else="">
                                                <span itemprop="name" t-field="author.partner_id.name" />
                                            </t>
                                        </div>
                                        <div>
                                            <span class="fa fa-envelope text-info" /> <a t-attf-href="mailto:{{author.partner_id.email}}"><t t-esc="author.partner_id.email" /></a>
                                        </div>
                                        <div>
                                            <span class="fa fa-home text-info"/> <span t-if="author.partner_id.institution" itemprop="institution" t-field="author.partner_id.institution" />
                                            <span t-if="author.partner_id.country_id">
                                                <img height="16px" t-att-src="author.partner_id.country_id.image_url" t-att-alt="'Flag of %s' % author.partner_id.country_id.name" t-att-title="author.partner_id.country_id.name"/>
                                                <span t-field="author.partner_id.country_id.name" />
                                            </span>
                                        </div>
                                    </li>
                                </ol>
                                <t t-else="">
                                    <ol id="authors_list" class="list-unstyled ui-sortable">
                                        
                                    </ol>
                                    <div t-if="error and error.get('authors')" class="small text-danger mt-1" t-esc="error.get('authors')" />
                                    <button t-if="not paper.is_done and paper.stage_id.can_edit" class="js_add_author btn btn-secondary">Add Author</button>
                                </t>
                            </div>
                        </div>
                    </div>
                    <div class="row mb32" t-if="paper.description">
                        <div t-if="paper.description" t-attf-class="col-12 col-lg-12 mb-4 mb-md-0">
                            <!-- <hr class="mb-1"/> -->
                            <div class="d-flex my-2">
                                <h4 id="abstract" data-anchor="true"><strong>Abstract<small class="text-sm text-muted" title="English"> [EN]</small></strong></h4>
                            </div>
                            <div class="py-1 paper_description js_comment" >
                                <t t-if="fixed" t-raw="paper.description" />
                                <textarea t-else="" t-attf-class="form-control form-control-lg o_wysiwyg_loader" name="description" required="True" >
                                    <t t-esc="post and post.get('description', '') or paper.description" />
                                </textarea>
                                <div t-if="error and error.get('description')" class="small text-danger mt-1" t-esc="error.get('description')" />
                            </div>
                        </div>
                    </div>
                    <div class="row mb32" t-if="paper.description_es">
                        <div t-if="paper.description_es" t-attf-class="col-12 col-lg-12 mb-4 mb-md-0">
                            <!-- <hr class="mb-1"/> -->
                            <div class="d-flex my-2">
                                <h4 id="abstract_es" data-anchor="true"><strong>Abstract<small class="text-sm text-muted" title="Spanish"> [ES]</small></strong></h4>
                            </div>
                            <div class="py-1 paper_description js_comment" >
                                <t t-if="fixed" t-raw="paper.description_es" />
                                <textarea t-else="" t-attf-class="form-control form-control-lg o_wysiwyg_loader" name="description_es" required="True" >
                                    <t t-esc="post and post.get('description_es', '') or paper.description_es" />
                                </textarea>
                                <div t-if="error and error.get('description_es')" class="small text-danger mt-1" t-esc="error.get('description_es')" />
                            </div>
                        </div>
                    </div>
                    <div class="row mb32" t-if="paper.sudo().tag_ids">
                        <!-- <hr class="mb-1"/> -->
                        <div class="col-12 mb-1">
                            <h4 id="keywords" data-anchor="true"><strong>Keywords</strong></h4>
                            <t t-if="fixed">
                                <t  t-foreach="paper.sudo().tag_ids" t-as="tag">
                                    <span class="badge badge-pill badge-primary" t-esc="tag.name" />
                                </t>
                            </t>
                            <t t-else="">
                                <input type="text" t-attf-class="form-control form-control-lg #{error.get('keywords') and 'is-invalid' or ''}"  name="keywords" required="True" placeholder="Comma separated keywords" t-att-value="post and post.get('keywords', '') or paper.keywords_list()" />
                                <div t-if="error and error.get('keywords')" class="small text-danger mt-1" t-esc="error.get('keywords')" />
                            </t>
                        </div>
                    </div>
                    <div class="row mb32">
                        <div t-attf-class="col-12 col-lg-12 mb-4 mb-md-0">
                            <!-- <hr class="mb-1"/> -->
                            <div class="d-flex my-2">
                                <h4 id="introduction" data-anchor="true"><strong>Introduction</strong></h4>
                            </div>
                            <div class="py-1 paper_introduction js_comment" >
                                <t t-if="fixed" t-raw="paper.introduction" />
                                <textarea t-else="" t-attf-class="form-control form-control-lg o_wysiwyg_loader" name="introduction" required="True" >
                                    <t t-esc="post and post.get('introduction', '') or paper.introduction" />
                                </textarea>
                                <div t-if="warning and warning.get('introduction')" class="small text-warning mt-1" t-esc="warning.get('introduction')" />
                                <div t-if="warning and warning.get('introduction') and not fixed and paper.event_id.paper_final_deadline" class="small text-warning mt-1" > You can fix this issue until <t t-esc="paper.event_id.paper_final_deadline" /> </div>
                                <div t-if="error and error.get('introduction')" class="small text-danger mt-1" t-esc="error.get('introduction')" />
                            </div>
                        </div>
                    </div>
                    <div class="row mb32">
                        <div t-attf-class="col-12 col-lg-12 mb-4 mb-md-0">
                            <!-- <hr class="mb-1"/> -->
                            <div class="d-flex my-2">
                                <h4 id="methodology" data-anchor="true"><strong>Methodology</strong></h4>
                            </div>
                            <div class="py-1 paper_methodology js_comment" >
                                <t t-if="fixed" t-raw="paper.methodology" />
                                <textarea t-else="" t-attf-class="form-control form-control-lg o_wysiwyg_loader" name="methodology" required="True" >
                                    <t t-esc="post and post.get('methodology', '') or paper.methodology" />
                                </textarea>
                                <div t-if="warning and warning.get('methodology')" class="small text-warning mt-1" t-esc="warning.get('methodology')" />
                                <div t-if="warning and warning.get('methodology') and not fixed and paper.event_id.paper_final_deadline" class="small text-warning mt-1" > You can fix this issue until <t t-esc="paper.event_id.paper_final_deadline" /> </div>
                                <div t-if="error and error.get('methodology')" class="small text-danger mt-1" t-esc="error.get('methodology')" />
                            </div>
                        </div>
                    </div>
                    <div class="row mb32">
                        <div t-attf-class="col-12 col-lg-12 mb-4 mb-md-0">
                            <!-- <hr class="mb-1"/> -->
                            <div class="d-flex my-2">
                                <h4 id="results" data-anchor="true"><strong>Results &amp; Discussion</strong></h4>
                            </div>
                            <div class="py-1 paper_results js_comment" >
                                <t t-if="fixed" t-raw="paper.results" />
                                <textarea t-else="" t-attf-class="form-control form-control-lg o_wysiwyg_loader" name="results" required="True" >
                                    <t t-esc="post and post.get('results', '') or paper.results" />
                                </textarea>
                                <div t-if="warning and warning.get('results')" class="small text-warning mt-1" t-esc="warning.get('results')" />
                                <div t-if="warning and warning.get('results') and not fixed and paper.event_id.paper_final_deadline" class="small text-warning mt-1" > You can fix this issue until <t t-esc="paper.event_id.paper_final_deadline" /> </div>
                                <div t-if="error and error.get('results')" class="small text-danger mt-1" t-esc="error.get('results')" />
                            </div>
                        </div>
                    </div>
                    <div class="row mb32">
                        <div t-attf-class="col-12 col-lg-12 mb-4 mb-md-0">
                            <!-- <hr class="mb-1"/> -->
                            <div class="d-flex my-2">
                                <h4 id="conclussions" data-anchor="true"><strong>Conclussions</strong></h4>
                            </div>
                            <div class="py-1 paper_conclussions js_comment" >
                                <t t-if="fixed" t-raw="paper.conclussions" />
                                
                                <textarea t-else="" t-attf-class="form-control form-control-lg o_wysiwyg_loader" name="conclussions" required="True" >
                                    <t t-esc="post and post.get('conclussions', '') or paper.conclussions" />
                                </textarea>
                                <div t-if="warning and warning.get('conclussions')" class="small text-warning mt-1" t-esc="warning.get('conclussions')" />
                                <div t-if="warning and warning.get('conclussions') and not fixed and paper.event_id.paper_final_deadline" class="small text-warning mt-1" > You can fix this issue until <t t-esc="paper.event_id.paper_final_deadline" /> </div>
                                <div t-if="error and error.get('conclussions')" class="small text-danger mt-1" t-esc="error.get('conclussions')" />
                            </div>
                        </div>
                    </div>
                    <div class="row mb32">
                        <div t-attf-class="col-12 col-lg-12 mb-4 mb-md-0">
                            <!-- <hr class="mb-1"/> -->
                            <div class="d-flex my-2">
                                <h4 id="bibliographic" data-anchor="true"><strong>Bibliographic References</strong></h4>
                            </div>
                            <div class="py-1 paper_bibliographic js_comment" >
                                <t t-if="fixed" t-raw="paper.bibliographic" />                                
                                <textarea t-else="" t-attf-class="form-control form-control-lg o_wysiwyg_loader" name="bibliographic" required="True" >
                                    <t t-esc="paper.bibliographic" />
                                </textarea>
                                <div t-if="warning and warning.get('bibliographic')" class="small text-warning mt-1" t-esc="warning.get('bibliographic')" />   
                                <div t-if="warning and warning.get('bibliographic') and not fixed and not paper.event_id.paper_final_deadline" class="small text-warning mt-1" > You can fix this issue until <t t-esc="paper.event_id.paper_final_deadline" /> </div>
                                <div t-if="error and error.get('bibliographic')" class="small text-danger mt-1" t-esc="error.get('bibliographic')" />
                            </div>
                        </div>
                    </div>
                    <div class="row mb32">
                        <div t-attf-class="col-12 col-lg-12 o_portal_attachments">
                            <!-- <hr class="mb-1"/> -->
                            <div class="d-flex my-2">
                                <h4 id="attachments" data-anchor="true"><strong>Attachments</strong></h4>
                            </div>                                
                            <div class="row">
                                <div t-attf-class="col col-lg-12">
                                    <ul class="list-group">
                                        <a class="list-group-item list-group-item-action d-flex align-items-center oe_attachments py-1 px-2" t-foreach='paper.attachment_ids' t-as='attachment' t-attf-href="/web/content/#{attachment.id}?download=true&amp;access_token=#{attachment.access_token}" target="_blank" data-no-post-process="">
                                            <div class='oe_attachment_embedded o_image o_image_small mr-2 mr-lg-3' t-att-title="attachment.name" t-att-data-mimetype="attachment.mimetype" t-attf-data-src="/web/image/#{attachment.id}/50x50?access_token=#{attachment.access_token}"/>
                                            <div class='oe_attachment_name text-truncate'><t t-esc='attachment.name'/> </div>&amp;nbsp;
                                            <div class="ml8 text-muted small" t-esc="str(int(round(attachment.file_size/1024)))+' KiB'"/>
                                            <span class="ml8 text-muted small">Uploaded on </span><span class="ml8 text-muted small" t-field="attachment.create_date" t-options='{"widget": "datetime"}'/>
                                            <!-- <button type="button" class="btn btn-danger js_delete_attachment fa fa-trash-o" aria-label="Delete Attachment" title="Delete Attachment"></button> -->
                                        </a>
                                    </ul>
                                </div>
                                <div t-if="not paper.is_done" class="col mt16 mb16">
                                    <label class="control-label" for="file">Upload a file</label>
                                    <input class="form-control form-control-lg" type="file" name="file" />
                                </div>
                            </div>                            
                        </div>
                    </div>
                    <div class="row">
                        <div t-attf-class="col-12 col-lg-12">
                            <input type="hidden" name="csrf_token" t-att-value="request.csrf_token()"/>
                            <button t-if="not paper.is_done" type="submit" t-attf-class="btn btn-xs btn-primary js_submit"><i class="fa fa-save"/> Save changes</button>
                        </div>
                    </div>
                    </form>
                </div>                                        
            </div>            
        </div>
    </template>

    <template id="portal_my_paper" name="My Paper"  inherit_id="portal.portal_sidebar" primary="True">
        <xpath expr="//div[hasclass('o_portal_sidebar')]" position="inside">
            <div class="row mt16 o_portal_sale_sidebar portal_event_track">
                <t t-set="title" t-value="" />
                <!-- Sidebar -->
                <t t-call="portal.portal_record_sidebar">
                    <t t-set="classes" t-value="'col-lg-3 d-print-none'"/>

                    <t t-set="title">
                        <h2 class="mb-0"><b>Paper</b></h2>
                    </t>
                    <t t-set="entries">
                        <ul class="list-group list-group-flush flex-wrap flex-row flex-lg-column">
                            <li class="list-group-item flex-grow-1">
                                <button t-if="not paper.is_done" class="btn btn-primary btn-block mb8 js_submit">
                                    <i class="fa fa-save"/> Save Changes
                                </button>
                                

                                <div class="o_download_pdf btn-toolbar flex-sm-nowrap">
                                    <div class="btn-group flex-grow-1 mr-1 mb-1">
                                        <a class="btn btn-secondary btn-block o_download_btn" t-att-href="paper.get_portal_url(report_type='pdf', download=True)" title="Download"><i class="fa fa-download"/> Download</a>
                                    </div>
                                    <div class="btn-group flex-grow-1 mb-1">
                                        <a class="btn btn-secondary btn-block o_print_btn o_portal_paper_print" t-att-href="paper.get_portal_url(report_type='pdf')" id="print_paper_report" title="Print" target="_blank"><i class="fa fa-print"/> Print</a>
                                    </div>
                                </div>
                            </li>

                            <li class="navspy list-group-item pl-0 flex-grow-1" t-ignore="true" role="complementary">
                                <ul class="nav flex-column bs-sidenav">
                                    <li class="nav-item"><a class="nav-link" style="max-width: 200px;" href="#event">Event</a></li>
                                    <li class="nav-item"><a class="nav-link" style="max-width: 200px;" href="#title">Title [EN]</a></li>
                                    <li class="nav-item"><a class="nav-link" style="max-width: 200px;" href="#title_es">Title [ES]</a></li>
                                    <li class="nav-item"><a class="nav-link" style="max-width: 200px;" href="#language">Main Language</a></li>
                                    <li class="nav-item"><a class="nav-link" style="max-width: 200px;" href="#_authors">Authors</a></li>
                                    <li class="nav-item"><a class="nav-link" style="max-width: 200px;" href="#abstract">Abstract [EN]</a></li>
                                    <li class="nav-item"><a class="nav-link" style="max-width: 200px;" href="#abstract_es">Abstract [ES]</a></li>
                                    <li class="nav-item"><a class="nav-link" style="max-width: 200px;" href="#keywords">Keywords</a></li>
                                    <li class="nav-item"><a class="nav-link" style="max-width: 200px;" href="#introduction">Introduction</a></li>
                                    <li class="nav-item"><a class="nav-link" style="max-width: 200px;" href="#methodology">Methodology</a></li>
                                    <li class="nav-item"><a class="nav-link" style="max-width: 200px;" href="#results">Results &amp; Discussion</a></li>
                                    <li class="nav-item"><a class="nav-link" style="max-width: 200px;" href="#conclussions">Conclussions</a></li>
                                    <li class="nav-item"><a class="nav-link" style="max-width: 200px;" href="#bibliographic">Bibliographic References</a></li>
                                    <li class="nav-item"><a class="nav-link" style="max-width: 200px;" href="#attachments">Attachments</a></li>
                                    <li class="nav-item"><a class="nav-link" style="max-width: 200px;" href="#discussion">Messages</a></li>
                                </ul>
                            </li>
                            <t t-if="not paper.is_done">                                
                                <li t-if="paper.event_id.paper_abstract_notification_date" class="list-group-item">
                                    <small><b class="text-muted">This paper should be reviewed before</b></small>
                                    <div>
                                        <t t-esc="paper.event_id.paper_abstract_notification_date.strftime('%d %B %Y')"/>
                                    </div>
                                </li>
                            </t>
                            <li t-if="paper.user_id" class="list-group-item flex-grow-1">
                                <div class="small mb-1"><strong class="text-muted">Manager</strong></div>
                                <div class="row flex-nowrap">
                                    <div class="col flex-grow-0 pr-2">
                                        <img class="rounded-circle mr4 float-left o_portal_contact_img" t-if="paper.user_id.image_1024" t-att-src="image_data_uri(paper.user_id.image_1024)" alt="Contact"/>
                                        <img class="rounded-circle mr4 float-left o_portal_contact_img" t-if="not paper.user_id.image_1024" src="/web/static/src/img/placeholder.png" alt="Contact"/>
                                    </div>
                                    <div class="col pl-0" style="min-width: 150px">
                                        <span t-field="paper.user_id" t-options='{"widget": "contact", "fields": ["name"], "no_marker": True}'/>
                                        <a href="#discussion" class="small"><i class="fa fa-comment"></i> Send message</a>
                                    </div>
                                </div>
                            </li>
                        </ul>
                    </t>
                </t>
                
                <!-- Page content -->
                <div id="paper_content" class="col-12 col-lg-9 justify-content-end">                
                   <!-- main content -->
                    
                    <div t-attf-class="card #{'pb-5' if report_type == 'html' else ''}" id="portal_paper_content">
                        <div t-call="website_event_track_uclv.portal_my_paper_content"/>
                    </div>
                    
                    <!-- bottom actions -->
                    <div class="container mt32">
                        <t t-if="not paper.is_done and paper.stage_id.can_edit" >
                            <div class="col-sm-auto mt8 mb8">
                                <!-- 
                                -->
                            </div>
                        </t>
                    </div>
                    
                    <div class="container mt32">
                        <h4><strong>Message and communication history</strong></h4>
                        <t t-call="portal.message_thread">
                            <t t-set="object" t-value="paper"/>
                            <t t-set="token" t-value="paper.access_token"/>
                            <t t-set="pid" t-value="pid"/>
                            <t t-set="hash" t-value="hash"/>
                        </t>
                    </div>
                </div>
            </div>            
        </xpath>
    </template>
</odoo>