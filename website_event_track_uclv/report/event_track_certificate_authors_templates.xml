<?xml version="1.0" encoding="utf-8"?>
<odoo>    
    <!-- template use to render a Track Certificate -->
    <template id="event_track_report_template_certificate_authors">
        <t t-call="web.basic_layout">
            <style>
                
                .cert-h1
                {
                    font-size: 2.3cm;
                    font-family:'AvantGarde'!important;
                }
                .cert-h2
                {
                    font-size: 0.9cm; 
                    font-weight: bold; 
                    font-family:'AvantGarde'!important;
                }
                .cert-h3
                {
                    font-size: 0.65cm;
                    font-family:'AvantGarde'!important;
                }
                .cert-h4
                {
                    font-size: 0.55cm;
                    font-family:'AvantGarde'!important;
                }
                .bold
                {
                    font-weight: bold;
                }
                .uppercase
                {
                    text-transform:uppercase; 
                }
                .green{color:#009933;}
                .bg-green{
                        color:white; 
                        background-color:#009933;
                        padding: 2mm 5mm;                        
                    }
                .bg-blue{
                        color:white; 
                        background-color:#003399;
                        padding: 2mm 5mm;                        
                    }
                .rounded
                {
                    border-radius:15px !important;
                }
                .page{
                    height: 225.2mm;
                    width: 292mm;
                    background: url('/website_event_track_uclv/static/src/img/cert-bg-track-clean.png');
                    background-size: 292mm 225.2mm;
                    background-repeat: no-repeat;
                    position: absolute;
                    top: 0;
                    left: 0;
                }
            </style>
            <t t-foreach="docs" t-as="o">
                    <div class="page">
                        <div style="display:block;margin:0 !important; position:absolute; top:60mm; left:90mm;width:190mm; ">
                            <center><span class="cert-h3 bold uppercase bg-green rounded">A LA PONENCIA</span></center>
                            <center class="cert-h4 mt-4 uppercase"  t-esc="o.with_context({'lang': 'es_ES'}).name"/>
                            <center class="mt-4"><span class="cert-h4 bold uppercase bg-blue rounded">AUTORES</span></center>                    
                            <center class="cert-h4 mt-4 uppercase">
                                <t t-foreach="o.author_ids" t-as="author">
                                    <span t-esc="author.partner_id.with_context({'lang': 'es_ES'}).full_name" />
                                </t>
                            </center>
                            <center class="cert-h3 mt-4 bold uppercase" t-esc="o.event_id.with_context({'lang': 'es_ES'}).name" />
                        </div>

                        
                        
                        <div style="display:block;margin:0 !important; position:absolute; bottom:24mm; left:15mm;width:50mm; ">
                            
                            <img t-att-src="'/report/barcode/?type=%s&amp;value=%s&amp;width=%s&amp;height=%s' % ('QR', o.authenticity_url, 200, 200)" style="width:5cm;height:5cm;"/>
                           
                        </div>
                            
                        
                    </div>
            </t>
        </t>
    </template>
</odoo>
